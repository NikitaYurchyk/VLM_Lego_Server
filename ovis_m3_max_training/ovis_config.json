{
  "model": "AIDC-AI/Ovis2.5-9B",
  "model_type": "ovis",
  "data": "ovis_m3_max_training/ovis_train_conversation.jsonl",
  "lora_layers": 32,
  "batch_size": 2,
  "learning_rate": 5e-06,
  "num_epochs": 5,
  "steps_per_eval": 25,
  "save_every": 50,
  "adapter_path": "ovis_adapters",
  "max_seq_len": 4096,
  "warmup_steps": 100,
  "weight_decay": 0.01,
  "vision_config": {
    "max_image_size": 1024,
    "native_resolution": true,
    "image_quality": "high",
    "multi_image_support": true
  },
  "hardware_optimization": {
    "platform": "m3_max",
    "ram_gb": 64,
    "mixed_precision": true,
    "gradient_accumulation_steps": 4,
    "dataloader_num_workers": 4
  },
  "lm_studio_compatibility": {
    "export_format": "gguf",
    "quantization": "q4_k_m",
    "context_length": 4096
  },
  "valid_data": "ovis_m3_max_training/ovis_valid_conversation.jsonl"
}